<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/btBack"
        android:outlineAmbientShadowColor="@color/white"
        android:background="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZoJoy xin chào !"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="30dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký để nhận các ưu đãi"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="độc quyền cho các thành viên"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/phone"
        android:hint="Email"
        android:inputType="phone"
        android:ems="10"
        android:textColorHint="#676767"
        android:textSize="14dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginHorizontal="20dp"
        android:paddingEnd="12dp"
        android:background="@drawable/ic_custom_input"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_custom_input"
        android:drawableStart="@drawable/ic_baseline_account_box_24"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Tên của bạn"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/black"
        android:textColorHint="#676767"
        android:textSize="14dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Đăng nhập &amp; đặt phòng ngay"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_custom_button"
        android:id="@+id/btnRegister"
        android:layout_gravity="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hoặc đăng nhập nhanh bằng"
        android:textColor="#595757"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="14dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/facebook" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/img_3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="85dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản ?"
            android:textColor="#595757"
            android:layout_marginLeft="30dp"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập ngay"
            android:textColor="@color/colorChecked"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnLogin"
            android:onClick="login"
            android:clickable="true"
            android:enabled="true"
            android:textSize="14dp"/>

    </LinearLayout>





    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textview"
        android:layout_alignStart="@+id/textview"
        android:visibility="gone"
        android:layout_alignParentBottom="true" />
</LinearLayout>