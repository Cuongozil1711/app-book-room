<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/bg_login"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/imAcc"
            android:src="@drawable/ic_baseline_account_circle_24"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZoJoy xin chào !"
            app:layout_constraintTop_toTopOf="@+id/imAcc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_login"
        android:layout_marginTop="-30dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để đặt phòng"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="với những ưu đãi độc quyền"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dành cho thành viên mới"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/phone"
            android:hint="Email"
            android:inputType="phone"
            android:ems="10"
            android:textSize="14dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginHorizontal="20dp"
            android:paddingEnd="12dp"
            android:background="@drawable/ic_custom_input"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:textColor="@color/black"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Đăng nhập &amp; đặt phòng ngay"
            android:layout_marginTop="120dp"
            android:background="@drawable/ic_custom_button"
            android:id="@+id/btnLogin"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hoặc đăng nhập nhanh bằng"
            android:textColor="#595757"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="14dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/facebook"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/img_3"
                android:layout_marginHorizontal="15dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản ?"
                android:textColor="#595757"
                android:layout_marginLeft="30dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:enabled="true"
                android:onClick="register"
                android:text="Đăng ký ngay"
                android:textColor="@color/colorChecked"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>





    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textview"
        android:layout_alignStart="@+id/textview"
        android:visibility="gone"
        android:layout_alignParentBottom="true" />
</LinearLayout>